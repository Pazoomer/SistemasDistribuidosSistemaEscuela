    <TextView
        android:id="@+id/textViewMessageContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        android:text="Este es un mensaje enviado de prueba muy largo para ver cÃ³mo se ajusta."
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>

    <TextView
        android:id="@+id/textViewMessageTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bubbleLayout"
        android:layout_alignEnd="@id/bubbleLayout"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="2dp"
        android:text="10:00 AM"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp" />
</RelativeLayout>